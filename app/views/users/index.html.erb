<h1 align='center'> All blog users</h1>
<% @users.each do |user| %>
  <ul class="listing">
    <div class="row">
      <div class="well col-md-4 col-md-offset-4">
        <li> <%= link_to gravator_for(user), user_path(user) %>
          <%= link_to user.username, user_path(user) ,class:'article-title col-md-offset-2' %>
        </li>
        <li class='center'><small> <b><%= pluralize(user.articles.count, "article") if user.articles%> </b> </small> </li>
        <% if logged_in? and current_user.admin? and current_user!=user %>
           <li align = 'right'>
             <%= link_to "Delete user", user_path(user), method: :delete,
                    data: {confirm: "Are you sure you want to delete the user and all their articles?"},
                    class: "btn btn-xs btn-danger" %>
           </li>
        <% end %>
      </div>
    </div>
  </ul>
<% end %>
